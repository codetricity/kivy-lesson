#:kivy 1.10.1

<FirstScreen>:

FirstScreen:
    rows: 4
    button_output: output
    input: input_box

    Label:
        text: "THETA Desktop Tester"
        font_size: 0.25 * self.height
    BoxLayout:
        orientation: "horizontal"
        Button: 
            text: "Btn 1: \nTake Picture \nMockup"
            font_size: 0.15 * self.height
            on_press: root.printIt()
        Button:
            text: "Btn 2: \nGet Parameter \nMockup"
            on_press: root.secondButton()
        Button:
            text: "Not Enabled"
        Button:
            text: "Not Enabled"            
    TextInput:
        id: input_box
        size_hint_x: 25
    Label:
        id: output
        text: "this is the output"